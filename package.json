{
  "name": "miku-frontend",
  "author": "OrzMiku",
  "version": "1.0.0",
  "description": "前端工程化练手项目",
  "private": "true",
  "scripts": {
    "prepare": "husky install",
    "lint:stylelint": "stylelint \"**/*.{vue,css,less}\"",
    "lint:stylelint:fix": "pnpm run lint:stylelint --fix",
    "lint:eslint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:eslint:fix": "pnpm run lint:eslint --fix",
    "format": "prettier . --write",
    "home:build": "pnpm --filter miku-homepage build",
    "home:dev": "pnpm --filter miku-homepage dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^18.17.5",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-recommended-less": "^2.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.2",
    "typescript": "~5.1.6"
  },
  "license": "MIT"
}
